{
    "name": "@arpadroid/ui",
    "version": "1.0.1",
    "description": "A UI library of web components",
    "exports": "./dist/arpadroid-ui.js",
    "module": "./dist/arpadroid-ui.js",
    "type": "module",
    "scripts": {
        "build-storybook": "storybook build",
        "build": "npm run build:clean && npm run build:css & rollup -c",
        "build:clean": "rm -rf dist",
        "build:css": "node ./scripts/bundle-css.cjs --minify --mode=production --verbose",
        "build:css:dev": "node ./scripts/bundle-css.cjs --minify --verbose",
        "build:watch": "npm run build:css:dev & rollup -c -w",
        "rollup:watch": "rollup -c -w",
        "build:types": "dts-bundle-generator src/types.d.ts --out-file src/types.compiled.d.ts",
        "build:run": "npm run build && npm run dev",
        "build:docs": "jsdoc2md src/services/*.js src/components/*/*.js > README.md",
        "build:storybook": "storybook build",
        "prepublish": "npm run build",
        "start:application": "cd ../application && npm run build:watch",
        "start:i18n": "cd ../i18n && npm run build:watch",
        "start:tools": "cd ../tools && npm run build:watch",
        "start:forms": "cd ../forms && npm run build:watch",
        "start:dev": "npm run start:application & npm run start:i18n & npm run start:tools & npm run start:forms & npm run build:watch",
        "storybook:dev": "npm run start:dev & npm run storybook",
        "storybook": "storybook dev -p 6007",
        "test": "npm run test:storybook",
        "test:storybook": "test-storybook --url http://127.0.0.1:6007"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/arpadroid/ui.git"
    },
    "keywords": [
        "web-components",
        "ui",
        "library"
    ],
    "author": "Andres Vaquero @arpadroid <web.andresvaquero@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/arpadroid/ui/issues"
    },
    "homepage": "https://github.com/arpadroid/ui#readme",
    "devDependencies": {
        "@arpadroid/stylesheet-bundler": "file:../stylesheet-bundler",
        "@babel/core": "^7.23.9",
        "@babel/plugin-syntax-import-assertions": "^7.23.3",
        "@babel/preset-env": "^7.23.9",
        "@chromatic-com/storybook": "^1.4.0",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@storybook/addon-a11y": "^8.1.1",
        "@storybook/addon-essentials": "^8.1.1",
        "@storybook/addon-interactions": "^8.1.1",
        "@storybook/addon-links": "^8.1.1",
        "@storybook/addon-webpack5-compiler-swc": "^1.0.2",
        "@storybook/blocks": "^8.1.1",
        "@storybook/cli": "^8.1.1",
        "@storybook/test": "^8.1.1",
        "@storybook/test-runner": "^0.18.1",
        "@storybook/web-components": "^8.1.1",
        "@storybook/web-components-webpack5": "^8.1.1",
        "babel-jest": "^29.7.0",
        "babel-loader": "^9.1.3",
        "dts-bundle-generator": "^9.3.1",
        "jsdoc-to-markdown": "^8.0.1",
        "lit": "^3.1.3",
        "rollup": "^4.18.0",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-dts": "^6.1.1",
        "rollup-plugin-watch": "^1.0.4",
        "storybook": "^8.1.1",
        "typescript": "^5.4.2"
    },
    "peerDependencies": {
        "@arpadroid/application": "file:../application",
        "@arpadroid/forms": "file:../forms",
        "@arpadroid/i18n": "file:../i18n",
        "@arpadroid/tools": "file:../tools"
    },
    "dependencies": {
        "material-symbols": "^0.15.0"
    }
}
