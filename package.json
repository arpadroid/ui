{
    "name": "@arpadroid/ui",
    "version": "0.0.1",
    "description": "A UI library of web components",
    "exports": "./dist/arpadroid-ui.js",
    "types": "./dist/@types/types.compiled.d.ts",
    "type": "module",
    "scripts": {
        "build:dev": "arpadroid-build --watch",
        "build": "arpadroid-build --minify",
        "clean:build": "npm run clean && npm install",
        "clean": "rm -rf ./dist ./node_modules package-lock.json",
        "dev": "npm run build:dev -- --storybook=6001",
        "prepublish": "npm run build",
        "test": "arpadroid-test --storybook --jest --port=6001",
        "test:ci": "npm run test -- --ci"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/arpadroid/ui.git"
    },
    "keywords": [
        "web-components",
        "ui",
        "library"
    ],
    "author": "Andres Vaquero @arpadroid <web.andresvaquero@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/arpadroid/ui/issues"
    },
    "homepage": "https://github.com/arpadroid/ui#readme",
    "devDependencies": {
        "@arpadroid/module": "file:../module",
        "@babel/core": "^7.23.9",
        "@babel/preset-env": "^7.23.9",
        "babel-jest": "^29.7.0",
        "jest-junit": "^16.0.0"
    },
    "peerDependencies": {
        "@arpadroid/style-bun": "file:../style-bun",
        "@arpadroid/i18n": "file:../i18n",
        "@arpadroid/tools": "file:../tools"
    },
    "dependencies": {
        "material-symbols": "^0.15.0"
    }
}
